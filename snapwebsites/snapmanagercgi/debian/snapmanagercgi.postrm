#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

if [ "$1" = "purge" ]
then
    # delete the data directory
    rm -rf /var/lib/snapwebsites/cluster-status

    # delete the snapmanagercgi and snapmanagerdaemon logs if any
    rm -f /var/log/snapwebsites/snapmanagercgi.log*
    rm -f /var/log/snapwebsites/snapmanagerdaemon.log*
fi

