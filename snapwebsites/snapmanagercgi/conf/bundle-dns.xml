<bundle>
  <name>dns</name>
  <description>
    <p>This bundle installs the Domain Name Server (bind9) on your machine.</p>
  </description>
  <packages>bind9</packages>
  <!-- Leave the zone files just in case the user wants to reuse them after
       removal.
  <prerm>
    # Remove locally generated files...
    rm /etc/bind/*.zone*
  </prerm>
  -->
</bundle>
