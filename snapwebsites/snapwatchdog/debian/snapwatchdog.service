[Unit]
Description=Snap! Websites snapwatchdog daemon
After=snapcommunicator.service
Requires=snapcommunicator.service snapdbproxy.service

[Service]
Type=simple
WorkingDirectory=~
ProtectHome=true
NoNewPrivileges=true
ExecStart=/usr/bin/snapwatchdogserver
ExecStop=/usr/bin/snapsignal "snapwatchdog/STOP cache=no"
Restart=on-failure
RestartSec=1min
User=snapwebsites
Group=snapwebsites
# For developers and administrators to get console output
#StandardOutput=tty
#StandardError=tty
#TTYPath=/dev/console
# Enter a size to get a core dump in case of a crash
#LimitCORE=10G

[Install]
WantedBy=multi-user.target

