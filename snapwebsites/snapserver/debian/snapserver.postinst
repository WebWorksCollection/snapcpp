#!/bin/sh -e

#DEBHELPER#

# Source debconf library.
. /usr/share/debconf/confmodule


if [ "$1" = "configure" ]
then
    # if snapinit is already running, we need to give it a kick
    #
    if systemctl is-active snapinit
    then
        systemctl restart snapinit
    fi
fi

