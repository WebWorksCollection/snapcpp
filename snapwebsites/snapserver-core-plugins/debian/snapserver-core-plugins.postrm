#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule


if [ "$1" = "purge" ]
then
    # delete the antivirus logs
    PKGNAME=antivirus
    rm -f /var/log/snapwebsites/${PKGNAME}.log*
    rm -f /var/log/snapwebsites/secure/${PKGNAME}.log*

    # TBD: reset the firewall to empty? It does not seem wise to me.

    # if snapinit is running, we need to give it a kick
    #
    if systemctl is-active snapinit
    then
        systemctl restart snapinit
    fi
fi

