<snap-tree>
  <content path="/js/sortable" owner="output">
    <!-- JavaScript code for the sortable extension -->
    <param name="content::title" revision="revision">Sortable Scripts</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>JavaScript code for the sortable editor extension.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="sortable" type="attachment/public">
      <path>qrc:/js/sortable/sortable.js</path>
      <mime-type>text/javascript</mime-type>
    </attachment>
    <attachment name="sortable-widgets" type="attachment/public">
      <path>qrc:/js/sortable/sortable-widgets.js</path>
      <mime-type>text/javascript</mime-type>
      <dependency>editor (&gt;= 0.0.3.468)</dependency>
      <dependency>sortable (&gt;= 1.4.2)</dependency>
    </attachment>
  </content>
  <content path="/css/sortable" owner="output">
    <!-- CSS code for the sortable extension -->
    <param name="content::title" revision="revision">Sortable Cascading Style Sheets</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>CSS code for the sortable editor extension.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="sortable" type="attachment/public">
      <path>qrc:/css/sortable/sortable.css</path>
      <mime-type>text/css</mime-type>
    </attachment>
  </content>
  <content path="/images/sortable" owner="output">
    <param name="content::title" revision="revision">Sortable Images</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Set of images offered and used by the sortable plugin.</p>]]>
    </param>
    <link name="permissions::direct::action::view" to="permissions::link_back::view" mode="*:*">/types/permissions/rights/view/attachment/public</link>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="sortable-logo-64x64" type="attachment/public">
      <path>:/images/sortable/sortable-logo-64x64.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
</snap-tree>
