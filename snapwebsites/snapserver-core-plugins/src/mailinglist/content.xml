<snap-tree>
  <content path="/admin/settings/mailinglist">
    <param name="content::title" revision="revision">Mailing List Administration</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Administration of your mailing lists.</p>]]>
    </param>
  </content>
  <content path="/images/mailinglist">
    <param name="content::title" revision="revision">Mailing List Images</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Images used by the mailinglist plugin.</p>]]>
    </param>
    <link name="permissions::direct::action::view" to="permissions::link_back::view" mode="*:*">/types/permissions/rights/view/attachment/public</link>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="mailinglist-logo" type="attachment/public">
      <path>:/images/mailinglist/mailinglist-logo-64x64.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
  <content path="/types/mailinglist/status">
    <param name="content::title" revision="revision">Mailing List Status</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Different statuses used by mailing lists. These statuses are managed internally only.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer</link>
  </content>
</snap-tree>
