<snap-tree>
  <content path="/admin/settings/editor/date-test" owner="output">
    <param name="content::title" revision="revision">Date Test Extension of the WYSIWYG Editor</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>This page is used to test the Date Widgets extensions of the Snap! WYSIWYG editor in view and edit modes.</p>]]>
    </param>
    <param name="layout::layout" revision="global" overwrite="yes">"date-widgets-test";</param>
    <param name="editor::layout" revision="global" overwrite="yes">"date-widgets-test-page";</param>
    <link name="permissions::direct::action::view" to="permissions::link_back::view" mode="*:*">/types/permissions/rights/view/page/private</link>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <link name="permissions::direct::action::edit" to="permissions::link_back::edit" mode="*:*">/types/permissions/rights/administer/website/info</link>
  </content>
  <content path="/js/editor">
    <attachment name="date-widgets" type="attachment/public">
      <path>qrc:/js/date_widgets/date-widgets.js</path>
      <mime-type>text/javascript</mime-type>
      <dependency>editor (&gt;= 0.0.3.620)</dependency>
    </attachment>
  </content>
  <content path="/images/editor">
    <attachment name="date-widgets-logo" type="attachment/public">
      <path>:/images/date_widgets/date-widgets-logo-64x64.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
  <content path="/css/editor">
    <attachment name="date-widgets" type="attachment/public">
      <path>qrc:/css/date_widgets/date-widgets.css</path>
      <mime-type>text/css</mime-type>
    </attachment>
  </content>
</snap-tree>
