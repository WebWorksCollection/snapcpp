<snap-tree>
  <content path="/admin/settings/antivirus" owner="output">
    <param name="content::title" revision="revision">Anti-Virus Settings</param>
    <param name="content::body" revision="revision">
      <p>Anti-virus settings.</p>
    </param>
    <param name="editor::layout" revision="global" overwrite="yes">"antivirus-settings-page";</param>
    <param name="layout::layout" revision="global" overwrite="yes">"antivirus-settings-parser";</param>
    <param name="form::source">settings</param>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
  </content>
  <content path="/images/antivirus">
    <param name="content::title" revision="revision">Antivirus Images</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Various images used by the antivirus plugin.</p>]]>
    </param>
    <link name="permissions::direct::action::view" to="permissions::link_back::view" mode="*:*">/types/permissions/rights/view/attachment/public</link>
    <link name="permissions::direct::action::administer" to="permissions::link_back::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="antivirus-logo" type="attachment/public">
      <path>:/images/antivirus/antivirus-logo-64x64.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
</snap-tree>
