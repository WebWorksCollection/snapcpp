<editor-form owner="bookkeeping" content-modified="2016-01-10 02:27:44">
  <timeout minutes="1440"/> <!-- 1 day -->
  <mode action="edit"/>
  <immediate/>
  <focus refid="client_name"/>
  <on-save allow-edit="yes"/>
  <taborder>
    <tabindex refid="client_name"/>
    <tabindex refid="client_address1"/>
    <tabindex refid="client_address2"/>
    <tabindex refid="client_city"/>
    <tabindex refid="client_state"/>
    <tabindex refid="client_zip"/>
    <tabindex refid="client_description"/>
  </taborder>

  <widget id="editor-session" type="hidden" field="editor::session" path="editor/session">
  </widget>
  <widget id="editor-timeout" type="silent" field="editor::timeout" path="editor/timeout">
  </widget>

  <!-- client information -->
  <widget id="client_name" type="line-edit" field="content::title" path="bookkeeping/client_name" no-toolbar="no-toolbar" auto-save="html">
    <tooltip>Enter the name of your client.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_address1" type="line-edit" field="bookkeeping::client_address1" path="bookkeeping/client_address1" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the first line of your client's address.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_address2" type="line-edit" field="bookkeeping::client_address2" path="bookkeeping/client_address2" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the second line of your client's address.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_city" type="line-edit" field="bookkeeping::client_city" path="bookkeeping/client_city" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the address of your client.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_state" type="line-edit" field="bookkeeping::client_state" path="bookkeeping/client_state" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the state of your client.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_zip" type="line-edit" field="bookkeeping::client_zip" path="bookkeeping/client_zip" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the zip code of your client.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="client_description" type="text-edit" field="content::body" path="bookkeeping/client_description" auto-save="html">
    <tooltip>Enter a description of your client.</tooltip>
    <help>Help</help>
  </widget>

</editor-form>
