#!/bin/sh -e

#DEBHELPER#

# Source debconf library.
. /usr/share/debconf/confmodule

if [ "$1" = "configure" ]
then
    for pkg in snapbackend snapsendmail snapimages snappagelist
    do
        if systemctl is-enabled ${pkg} 2> /dev/null
        then
            systemctl start ${pkg}
        fi
    done
fi

