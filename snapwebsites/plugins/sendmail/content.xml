<snap-tree>
  <content path="/admin/email">
    <param name="content::title" revision="revision">e-Mail</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Different emails that different plugins send to users.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/sendmail</link>
  </content>
  <content path="/types/sendmail">
    <param name="content::title" revision="revision">Sendmail Statuses</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Different tags used for emails managed by the sendmail plugin.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/sendmail</link>
  </content>
  <content path="/types/sendmail/status">
    <!-- this is currently two direct values in two cells... -->
    <param name="content::title" revision="revision">Sendmail Status</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>The current status of an email.</p>]]>
    </param>
  </content>
  <content path="/types/permissions/rights/administer/sendmail">
    <param name="content::title" revision="revision">Sendmail Right</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Rights to access the different emails that the system sends to users (i.e. the email subject and body).</p>]]>
    </param>
  </content>
  <content path="/types/taxonomy/system/content-types/email">
    <param name="taxonomy::name">sendmail::email_page</param>
    <param name="content::title" revision="revision">Email Content Type</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>This page type is used to mark all the emails of your website. It is used to categorize the emails that get sent to clients. This allows you, for example, to mark the emails with a specific theme.</p>]]>
    </param>
    <param name="layout::layout" revision="global">"sendmail";</param>
    <param name="layout::theme" revision="global">"sendmail";</param>
  </content>
  <content path="unsubscribe" owner="output">
    <param name="content::title" revision="revision">Unsubscribe from this Snap! Websites Installation</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Please enter your email address so we can avoid sending you any more emails.</p>]]>
    </param>
    <!-- by default we force our own theme and layout to avoid any potential
         problems and prevent someone from unsubscribing -->
    <param name="editor::layout" revision="global" overwrite="yes">"unsubscribe-page";</param>
    <param name="layout::layout" revision="global" overwrite="yes">"unsubscribe-parser";</param>
    <param name="layout::theme" revision="global" overwrite="yes">"unsubscribe-theme";</param>
    <param name="permissions::dynamic" type="int8" revision="global">1</param>
    <link name="permissions::direct::action::view" to="permissions::link_back" mode="*:*">/types/permissions/rights/view/page/public</link>
    <link name="permissions::direct::action::submit" to="permissions::link_back" mode="*:*">/types/permissions/rights/submit/application</link>
    <link name="shorturl::no_shorturl" to="shorturl::no_shorturl" mode="1:*">/types/taxonomy/system/shorturl/no_shorturl</link>
  </content>
  <content path="/js/sendmail">
    <param name="content::title" revision="revision">Sendmail Dynamic Handling</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>JavaScript code for the sendmail extension.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="unsubscribe" type="attachment/public">
      <path>qrc:/js/sendmail/unsubscribe.js</path>
      <mime-type>text/javascript</mime-type>
      <dependency>editor (&gt;= 0.0.3.333)</dependency>
    </attachment>
  </content>
</snap-tree>
