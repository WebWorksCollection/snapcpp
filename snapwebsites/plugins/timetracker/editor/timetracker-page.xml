<editor-form owner="timetracker" content-modified="2016-01-02 05:28:23">
  <mode action="edit"/>
  <immediate/>
  <focus refid="date"/>
  <on-save allow-edit="yes"/>
  <taborder>
    <tabindex refid="date"/>
    <tabindex refid="time"/>
    <tabindex refid="description"/>
  </taborder>
  <widget id="editor-session" type="hidden" field="editor::session" path="editor/session">
  </widget>

  <!-- row -->
  <widget id="date" type="line-edit" field="timetracker::time" path="timetracker/date" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the date when you did the work.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="time" type="line-edit" field="timetracker::time" path="timetracker/time" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter the number of hours of work. You may enter minutes after a colon.</tooltip>
    <help>Help</help>
  </widget>
  <widget id="description" type="text-edit" field="timetracker::time" path="timetracker/description" no-toolbar="no-toolbar" auto-save="string">
    <tooltip>Enter a brief description of your work.</tooltip>
    <help>Help</help>
  </widget>

</editor-form>
