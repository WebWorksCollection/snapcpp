<snap-tree>
  <content path="/admin/settings/ecommerce">
    <param name="content::title" revision="revision">e-Commerce Global Settings</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Name and other global settings of your online store.</p>]]>
    </param>
    <param name="editor::layout" revision="global" overwrite="yes">"locale-settings-page";</param>
    <param name="layout::layout" revision="global" overwrite="yes">"locale-settings-parser";</param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website</link>
  </content>
  <content path="/types/taxonomy/system/content-types/ecommerce/product">
    <param name="content::title" revision="revision">An e-Commerce Product</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>A page marked with this type or a child of this type is viewed as a product by the e-Commerce plugin and thus it can be added to the cart, processed through the checkout, and other similar functionality.</p>]]>
    </param>
    <link name="permissions::action::view" to="permissions::link_back" mode="*:*">/types/permissions/rights/view/page/private</link>
    <link name="permissions::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer</link>
  </content>
  <content path="/images/ecommerce">
    <param name="content::title" revision="revision">Images Offered by e-Commerce</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Default set of images related to the e-Commerce system.</p>]]>
    </param>
    <link name="permissions::direct::action::view" to="permissions::link_back" mode="*:*">/types/permissions/rights/view/attachment/public</link>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="empty-shopping-cart" type="attachment/public">
      <path>:/images/ecommerce/empty-shopping-cart.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
    <attachment name="shopping-cart" type="attachment/public">
      <path>:/images/ecommerce/shopping-cart.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
  <content path="/css/ecommerce">
    <param name="content::title" revision="revision">e-Commerce CSS</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>CSS files used by e-Commerce.</p>]]>
    </param>
    <attachment name="ecommerce" type="attachment/public">
      <path>qrc:/css/ecommerce/ecommerce.css</path>
      <mime-type>text/css</mime-type>
    </attachment>
  </content>
  <content path="/js/ecommerce">
    <param name="content::title" revision="revision">e-Commerce JavaScripts</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>e-Commerce JavaScripts to support the Snap! instant cart feature among other things.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="ecommerce" type="attachment/public">
      <path>:/js/ecommerce/ecommerce.js</path>
      <mime-type>text/javascript</mime-type>
      <dependency>editor (&gt;= 0.0.3.262)</dependency>
    </attachment>
  </content>
</snap-tree>
