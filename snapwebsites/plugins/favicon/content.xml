<snap-tree>
  <content path="/favicon.ico" owner="output">
    <param name="content::final" type="int8" revision="global">1</param>
    <link name="content::page_type" to="content::page" mode="1:*">/types/taxonomy/system/content-types/page/public</link>
    <link name="permissions::direct::action::view" to="permissions::link_back" mode="*:*">/types/permissions/rights/view/page/for-spammers</link>
  </content>
  <content path="/default-favicon.ico" owner="output">
    <param name="content::final" type="int8" revision="global">1</param>
    <link name="content::page_type" to="content::page" mode="1:*">/types/taxonomy/system/content-types/page/public</link>
    <link name="permissions::direct::action::view" to="permissions::link_back" mode="*:*">/types/permissions/rights/view/page/public</link>
  </content>
  <content path="/admin/settings/favicon" owner="output">
    <param name="content::title" revision="revision">Favorite Icon Settings (favicon.ico)</param>
    <param name="content::body" revision="revision">
      <p>Site wide favorite icon settings.</p>
    </param>
    <param name="editor::layout" revision="global" overwrite="yes">"favicon-settings-page";</param>
    <param name="layout::layout" revision="global" overwrite="yes">"favicon-settings-parser";</param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <link name="menu::admin" to="menu::admin" mode="1:*">/types/taxonomy/system/menu/item/admin</link>
  </content>
  <content path="/css/favicon" owner="output">
    <param name="content::title" revision="revision">Default CSS for Favicon Settings</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>The cascading style sheets for favicon forms generated by the editor.</p>]]>
    </param>
    <link name="permissions::direct::action::administer" to="permissions::link_back" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <attachment name="editor" type="attachment/public">
      <path>qrc:/css/favicon/favicon.css</path>
      <mime-type>text/css</mime-type>
    </attachment>
  </content>
</snap-tree>
