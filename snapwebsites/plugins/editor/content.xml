<snap-tree>
  <content path="/admin/settings/editor">
    <param name="content::title">WYSIWYG Editor</param>
    <param name="content::body">
      <![CDATA[<p>Change your WYSIWYG editor behavior.</p>]]>
    </param>
    <link name="permissions::administer" to="permissions::administer" mode="*:*">/types/permissions/rights/administer/info</link>
  </content>
  <content path="/js/editor">
    <!-- JavaScript code for the inline WYSIWYG editor -->
    <param name="content::title">Editor Source</param>
    <param name="content::body">
      <![CDATA[<p>JavaScript code for the Snap! WYSIWYG Editor.</p>]]>
    </param>
    <link name="permissions::administer" to="permissions::administer" mode="*:*">/types/permissions/rights/administer/info</link>
    <attachment name="editor" type="attachment/public" owner="content">
      <path>:/js/editor/editor.js</path>
      <mime-type>text/javascript</mime-type>
      <dependency>content (&gt;= 0.0.1)</dependency>
    </attachment>
  </content>
  <content path="/images/editor">
    <param name="content::title">Editor Images</param>
    <param name="content::body">
      <![CDATA[<p>Images used by the editor plugin.</p>]]>
    </param>
    <link name="permissions::view" to="permissions::view" mode="*:*">/types/permissions/rights/view/attachment/public</link>
    <link name="permissions::administer" to="permissions::administer" mode="*:*">/types/permissions/rights/administer/info</link>
    <!-- let the content plugin server the image -->
    <attachment name="buttons" type="attachment/public" owner="content">
      <path>:/images/editor/buttons.png</path>
      <mime-type>image/png</mime-type>
    </attachment>
  </content>
</snap-tree>
