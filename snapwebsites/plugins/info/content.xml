<snap-tree>
  <content path="/admin/settings/info">
    <param name="content::title" revision="revision">Website Basic Settings</param>
    <param name="content::body" revision="revision"><p>Site wide settings as offerred by the core system of your website.</p>[form::source]</param>
    <param name="form::source">settings</param>
    <link name="permissions::administer" to="permissions::administer" mode="*:*">/types/permissions/rights/administer/website/info</link>
    <link name="menu::admin" to="menu::admin" mode="1:*">/types/taxonomy/system/menu/item/admin</link>
  </content>
  <content path="/types/permissions/rights/administer/website/info">
    <param name="content::title" revision="revision">Administer Basic Website Information Right</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Administer basic information on the website.</p><p>This right gives the user access to all basic information available on the website.</p>]]>
    </param>
  </content>
  <!-- handle the messages settings because messages is too low level for having a form of its own -->
  <content path="/admin/settings/messages">
    <param name="content::title" revision="revision">Messages Administration</param>
    <param name="content::body" revision="revision">
      <![CDATA[<p>Settings on how to handle your website messages (errors, information, debug).</p>]]>
    </param>
  </content>
</snap-tree>
